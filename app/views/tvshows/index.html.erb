<head>
  <style>
  .carousel-inner > .item > img,
  .carousel-inner > .item > a > img {
      width: 60%;
      margin: auto;
  }
  </style>
</head>

<body>  
  <br>
  <!-- This contains the carousel that changes images at the top -->
  <div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>


      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img src="http://digitalspyuk.cdnds.net/15/31/980x490/landscape_ustv-netflix-narcos-character-art-pena.jpg" alt="Chania" width="400" height="400">
          <div class="carousel-caption">
            <h3>Narcos</h3>
            <p></p>
          </div>
        </div>
        <div class="item">
          <img src="http://cdn2.ubergizmo.com/wp-content/uploads/2014/07/house-of-cards.jpg" alt="Chania" width="400" height="400">
          <div class="carousel-caption">
            <h3>House Of Cards</h3>
            <p></p>
          </div>
        </div>
      
        <div class="item">
          <img src="http://roa.h-cdn.co/assets/15/04/980x490/landscape_nrm_1421784175-toppy.jpg" alt="Flower" width="400" height="400">
          <div class="carousel-caption">
            <h3>Flowers</h3>
            <p></p>
          </div>
        </div>

        <div class="item">
          <img src="http://thegeekiary.com/wp-content/uploads/2015/07/rick-and-morty-season-2.jpg" alt="Flower" width="460" height="345">
          <div class="carousel-caption">
            <h3>Rick and Morty</h3>
            <p></p>
          </div>
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


    <br>
    <!-- Display the content -->
    <h3 class="feature_movie"> Featured Tv shows </h3>
    <div class="row">
      <% @tvshows.each do |tvshow| %>
        <div class="col-xs-6 col-md-3"> 
          <div class="thumbnail">
            <p><%= link_to (image_tag tvshow.image.url(:medium)), tvshow %> </p>
            <div class="movie_overview">
              <h3><%=tvshow.name%></h3>
              <p class="director">Dircted by <%=%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to 'New Tvshow', new_tvshow_path %>
</body>

